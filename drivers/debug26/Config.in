config DEBUG26_DEBUG26
    tristate "debug26"
    default n
    help
		RAMDISK: ramdisk in 2.6 use initramfs,setup 2.6 kernel's menuconfig:
		          General setup>Initramfs source file(s)
				  g root=/dev/ram0 rdinit=/bin/bash
		NFS: setup boot params  nfsaddrs=10.0.0.12:::::eth0 nfsroot=10.0.0.3:/mnt/sdb2/debian
			 /etc/exports: /mnt/sdb2/newdebian  *(rw,async,no_root_squash)
		INSTALL DEBUG26 TO LINUX KERNEL 2.4:
		  cp -a debug26 linux/drivers
		  edit linux/Makefile
			+DRIVERS-$(CONFIG_DEBUG26) += drivers/debug26/mydebug.o

			DRIVERS := $(DRIVERS-y)

			menuconfig: include/linux/version.h symlinks
				$(MAKE) -C scripts/lxdialog all
				$(CONFIG_SHELL) scripts/Menuconfig arch/$(ARCH)/config.in
				+@if egrep "^CONFIG_DEBUG26=y" .config > /dev/null; then \
				+	$(MAKE) -C drivers/debug26 menuconfig; \
				+ fi
		  edit linux/drivers/Make
				+ sundir-$(CONFIG_DEBUG26)	+= debug26
		 
		INSTALL DEBUG26 TO LINUX KERNEL 2.6:
		  cp -a debug26 linux/drivers
		  edit linux/scripts/kconfig/Makefile
			menuconfig: $(obj)/mconf
				$(Q)$(MAKE) $(build)=scripts/lxdialog
				$< arch/$(ARCH)/Kconfig
			+	@if egrep "^CONFIG_DEBUG26=y" .config > /dev/null; then \
			+		$(MAKE)  obj=`pwd`/drivers/debug26 -C drivers/debug26 menuconfig; \
			+	 fi
		  edit linux/drivers/Make
			+obj-$(CONFIG_DEBUG26) += debug26/






